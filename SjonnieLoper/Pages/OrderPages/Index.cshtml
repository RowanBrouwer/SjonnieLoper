@page
@model SjonnieLoper.Pages.OrderPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdersAndReservations[0].AmountOrderd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersAndReservations[0].Ordercost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrdersAndReservations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOrderd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordercost)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
